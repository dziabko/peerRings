<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".qrAccept">

    <!--<EditText-->
    <!--android:id="@+id/privateKey"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:hint="Enter Private Key" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the transaction encoded in the QR code."
        android:textColor="@color/unixGreen"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/buyOrder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/unixGreen"
            android:gravity="center"
            android:text="0 ETH"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sellOrder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/unixGreen"
            android:gravity="center"
            android:text="0 BTC"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_bg"
            android:text="Accept" />

        <Button
            android:layout_weight="1"
            android:id="@+id/decline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_bg"
            android:text="Decline" />
    </LinearLayout>


</LinearLayout>