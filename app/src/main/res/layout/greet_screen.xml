<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to our mobile wallet. You can execute p2p transactions on the blockchain using this tool!"/>

    <EditText
        android:id="@+id/publicKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Public Key" />

    <EditText
        android:id="@+id/privateKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Private Key" />

    <Button
        android:id="@+id/submitKeys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Keys"/>



</LinearLayout>